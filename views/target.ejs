<%- include('_header'); -%>

<div class="row">
    <div class="col-lg-4 tar">
        <form class="mx-auto" style="width: 300px;">
   
            <div class="my-3">
        
                <input type="password" class="form-control" id="Projected Income" placeholder="Projected Income" autocomplete="off">  
            </div>
        
        
           <div class="my-3">
        
               <input type="password" class="form-control" id="Target Savings" placeholder="Target Savings" autocomplete="off">
            </div>
            <div class="my-3">
        
                <button type="submit" class="btn btn-danger">Set Target</button>
            </div>
          </form>
            
        </form>
    </div>
    <div class="col-lg-8">
        <div class="chartBoxtarget">
            <canvas id="targetchart"></canvas>
        </div>
        <script>
        var ctx = document.getElementById('targetchart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Income', 'Expense', 'Savings', 'Savings Target'],
                datasets: [{
                    label: 'Financial Target',
                    data: [120, 90, 30, 50],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        </script>
    </div>
   
</div>


<div style="height: 100px;">

</div>










